@model Curso

@{
    ViewData["Title"] = "Modificar Curso";
    Layout = "Simple";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning" asp-validation-summary="All"></div>

<form method="POST">
    <div class="row">
        <div class="form-group col-6">
            <div class="py-1">
                <label asp-for="Nombre"></label>
                <input class="form-control" asp-for="Nombre" value="@Model.Nombre" required/>
            </div>
            <div class="py-1">
                <label asp-for="Dirección"></label>
                <input class="form-control" asp-for="Dirección" value="@Model.Dirección"/>
            </div>
            <div class="py-1">
                <label asp-for="Jornada"></label>
                @Html.DropDownList(
                    "Jornada", Html.GetEnumSelectList<TiposJornada>(), "Seleccione una jornada",
                        new {@class = "form-control"}
                )
            </div>
            <input type="submit" value="Actualizar"/>
            </div>
        </div>
    </div>
</form>

